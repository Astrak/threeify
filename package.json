{
  "name": "threeify",
  "version": "0.0.2-alpha",
  "description": "Typescript 3D Library",
  "keywords": [
    "threeify",
    "webgl",
    "webgpu",
    "3D"
  ],
  "author": "threeify authors",
  "license": "ISC",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhouston/threeify"
  },
  "main": "index.ts",
  "module": "index.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch & tgt -i ./src -o ./dist -w",
    "build-glsl": "tgt -i ./src -o ./dist -w",
    "start": "es-dev-server --node-resolve --watch",
    "dev": "npm run watch & npm start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "es-dev-server": "^1.53.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cflint": "^1.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "threeify-glsl-transpiler": "0.1.2",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "prettier": "^2.0.5"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  }
}
